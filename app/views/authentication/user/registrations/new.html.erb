<h1 class="text-center mb-4 font-weight-bold">Create an account for free</h1>
<p class="text-center text-muted">Free forever. No payment needed.</p>

<div class="form-group ">
    <%= simple_form_for resource,
                    as: resource_name,
                    url: registration_path(resource_name),
                    defaults: {
                        label: false,
                        wrapper_html: { class: "mb-2" }
                    } do |f| %>
        <%= f.error_notification %>

        <div class="d-flex flex-column">
            <%= f.input :user_name,
                    autofocus: true,
                    required: true,
                    wrapper_html: { class: "col-sm-8 mb-2 mx-auto"},
                    input_html: {class: "bg-secondary bg-opacity-50"},
                    placeholder: "linkbush.io/...username" %>
            <%= f.input :email,
                    required: true,
                    wrapper_html: { class: "col-sm-8 mb-2 mx-auto"},
                    input_html: {class: "bg-secondary bg-opacity-50"},
                    placeholder: "email" %>
            <%= f.input :password,
                    required: true,
                    wrapper_html: { class: "col-sm-8 mb-2 mx-auto"},
                    input_html: {class: "bg-secondary bg-opacity-50"},
                    placeholder: "password" %>
            <%# <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "form-control-lg" },
                        placeholder: "password confirmation" %>
            <%= f.label :accepted_terms_and_conditions, class: "col-sm-8 mb-2 mx-auto" do %>
                <%= f.check_box :accepted_terms_and_conditions %> 
                    <span class="labelText">By creating an account you are agreeing to our 
                        <%= link_to "Terms and Conditions.", root_path, target: "_blank", class: "link-success" %>
                    </span>
            <% end %>
        </div>

        <div class="text-center mt-2">
            <%= button_tag "Sign up with email",
                            class: "btn btn-secondary btn-lg btn-block",
                            type: "submit" %>
        </div>
    <% end %>
</div>

<p class="text-center mt-4 mb-0">
    <%= link_to "Already have an account?", new_user_session_path, class: "link-success" %>
</p>